<h1>Activity</h1>

<div class="row">
  <div class="col-md-12">
    <table class="table table-hover table-bordered table-striped">
      <thead>
        <tr>
          <th>Title</th>
          <th>Tags</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= @activity.title %></td>
          <td><% @activity.tags.each_with_index do |tag, index| %>
                <% if index == @activity.tags.size - 1 %>
                  <%= "#{tag.name}" %>
                <% else %>
                  <%= "#{tag.name}, " %>
                <% end %>
              <% end %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <%= link_to 'Edit Activity', edit_activity_path(@activity.id), class: 'btn btn-default' %>
    <%= link_to 'Create New Activity', new_activity_path, class: 'btn btn-default' %>
    <%= link_to 'All Activities', activities_path, class: 'btn btn-default' %>
  </div>
</div>