<div class="row">
  <div class="col-md-3">
    <h1>Activities</h1>
  </div>
  <div class="col-md-3 col-md-offset-6">
    <br/>
    <button type="button" class="btn btn-default pull-right"><%= link_to 'Create New Activity', new_activity_path %></button>
  </div>
</div>


<div class="row">
  <table class="table table-hover table-bordered table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Tags</th>
      </tr>
    </thead>

    <tbody>
      <% @activities.each do |activity| %>
      <tr>
          <td><%= activity.title %></td>
          <td><% activity.tags.each do |tag| %>
                <%= tag.name %>
              <% end %>
          </td>
          <td><%= link_to 'Edit', edit_activity_path(activity.id) %></td>
          <td><%= link_to 'Delete', activity_path(activity.id), method: :delete %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

<button type="button" class="btn btn-default"><%= link_to 'Create New Activity', new_activity_path %></button>
