<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>New Activity</h1>
  </div>
</div>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= bootstrap_form_for @activity do |f| %>
      <%= f.text_field :title %>
      <%= f.fields_for :tags do |tag| %>
        <%= tag.text_field :tags %>
      <% end %>
      <%= f.submit 'Create Activity' %>
    <% end %>
  </div>
</div>
<br/>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <button type="button" class="btn btn-default"><%= link_to 'All Activities', activities_path %></button>
    <button type="button" class="btn btn-default"><%= link_to 'Create New Activity', new_activity_path %></button>
  </div>
</div>
