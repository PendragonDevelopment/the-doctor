<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>New Activity</h1>
  </div>
</div>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= bootstrap_form_for @activity do |f| %>
      <%= f.text_field :title %>
      <%= f.text_field :tag_list %>
      <%= f.submit 'Create Activity' %>
    <% end %>
  </div>
</div>
<br/>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= link_to 'All Activities', activities_path, class: 'btn btn-default' %>
  </div>
</div>
