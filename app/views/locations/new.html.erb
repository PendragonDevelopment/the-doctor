<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>New Location</h1>
  </div>
</div>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= bootstrap_form_for @location do |f| %>
      <%= f.text_field :title %>
      <%= f.text_area :description %>
      <%= f.text_field :latitude %>
      <%= f.text_field :longitude %>
      <%= f.submit 'Create Location' %>
    <% end %>
  </div>
</div>
<br/>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <button type="button" class="btn btn-default"><%= link_to 'All Locations', locations_path %></button>
    <button type="button" class="btn btn-default"><%= link_to 'Create New Location', new_location_path %></button>
  </div>
</div>