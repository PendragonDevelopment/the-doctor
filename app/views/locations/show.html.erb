<h1>Location</h1>

<div class="row">
  <div class="col-md-12">
    <table class="table table-hover table-bordered table-striped">
      <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th>Latitude</th>
          <th>Longitude</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= @location.title %></td>
          <td><%= @location.description %></td>
          <td><%= @location.latitude %></td>
          <td><%= @location.longitude %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <%= link_to 'Edit Location', edit_location_path(@location.id), class: 'btn btn-default' %>
    <%= link_to 'Create New Location', new_location_path, class: 'btn btn-default' %>
    <%= link_to 'All Locations', locations_path, class: 'btn btn-default' %>
  </div>
</div>