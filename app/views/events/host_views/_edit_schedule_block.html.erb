<h1>Edit Schedule Block</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Create a New Event Instance</h1>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h3><%= "#{@event.activity.title} at #{@event.location.title}" %></h3>
    <br/>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= bootstrap_form_tag url: "/events/#{@event.id}/update_schedule_block" do |f| %>
      <%= f.datetime_select :start_time, ampm:true, default: DateTime.parse(@schedule_block['start_time']) %>
      <%= f.datetime_select :end_time, ampm:true, default: DateTime.parse(@schedule_block['end_time']) %>
      <%= f.number_field :reservation_min, value: @schedule_block['reservation_min'].to_i %>
      <%= f.number_field :reservation_max, value: @schedule_block['reservation_max'].to_i %>
      <%= hidden_field_tag :host_id, value = current_user.host.id %>
      <%= hidden_field_tag :event_id, value =  @event.id %>
      <%= hidden_field_tag :location_id, value = @event.location.id %>
      <%= hidden_field_tag :status, value = 'open' %>
      <%= hidden_field_tag :schedule_block_id, value = @schedule_block['id'] %>
      
      <%= f.submit 'Update Event Instance' %>
    <% end %>
  </div>
</div>