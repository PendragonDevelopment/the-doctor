<h1>Events</h1>

<table class="table table-hover">
	<thead>
		<tr>
			<th>Title</th>
			<th>Location</th>
			<th>Price</th>
      <th>Host</th>
      <th>Start Time</th>
			<th>End Time</th>
      <th>Reservation Min</th>
      <th>Reservation Max</th>
		</tr>
	</thead>

	<tbody>
		<% @events.each do |event| %>
			<% schedule_block_array = @schedule_blocks.select{|sb| sb['event_id'] == event.id} %>
			<% schedule_block = schedule_block_array.first %>
			<tr>
				<td><%= event.activity.title %></td>
				<td><%= event.location.title %></td>
				<td><%= event.rate %></td>
        <td><%= event.host.user.first_name %></td>
        <td><%= schedule_block['start_time'] %></td>
        <td><%= schedule_block['end_time'] %></td>
        <td><%= schedule_block['reservation_min'] %></td>
        <td><%= schedule_block['reservation_max'] %></td>
        <td><%= link_to 'Edit', edit_event_path(event.id) %></td>
        <td>Destroy</td>


			</tr>
		<% end %>
	</tbody>
</table>

<%= link_to 'All Events', events_path %>
<%= link_to 'New Event', new_event_path %>
