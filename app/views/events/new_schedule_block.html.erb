<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Create a New Event Instance</h1>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h3><%= "Event: #{@event.activity.title}" %></h3>
    <br/>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= bootstrap_form_for :schedule_block do |f| %>
      <%= f.datetime_select :start_time, ampm:true %>
      <%= f.datetime_select :end_time, ampm:true %>
      <%= f.number_field :reservation_min %>
      <%= f.number_field :reservation_max %>
      <%= hidden_field_tag :host, value = current_user.host %>
      
      <%= f.submit 'Create Event Instance' %>
    <% end %>
  </div>
</div>

