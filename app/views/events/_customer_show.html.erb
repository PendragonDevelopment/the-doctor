<h3>Please review the event details below.</h3>

<div class="row">
  <div class="col-md-12">
    <table class="table table-hover table-bordered table-striped">
      <thead>
        <tr>
          <th>Title</th>
          <th>Location</th>
          <th>Time</th>
          <th>Host</th>
          <th>Status</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= @event.activity.title %></td>
          <td><%= @event.location.title %></td>
          <td><%= DateTime.parse(@schedule_block['start_time']).strftime("%l:%M %p, %A, %B %e, %Y")%>-<%= DateTime.parse(@schedule_block['end_time']).strftime("%l:%M %p, %A, %B %e, %Y") %></td>
          <td><%= @event.host.user.first_name %></td>
          <td><%= @schedule_block['status'] %></td>
          <td><%= "$#{@event.rate}" %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <%= link_to "Back to All Events", events_path, class: 'btn btn-default'  %>
  </div>
</div>