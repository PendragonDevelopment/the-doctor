<h1>Cancel Event Instance</h1>

<!-- If schedule_block has appointments, display message stating the Host cannot cancel appointment
-->

<h3>Are you sure you want to cancel this Event Instance?</h3>

<div class="row">
  <div class="col-md-12">
    <table class="table table-hover table-bordered table-striped">
      <thead>
        <tr>
          <th>Date</th>
          <th>Time</th>
          <th>Attendees</th>
          <th>Reservation Min</th>
          <th>Reservation Max</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= DateTime.parse(@schedule_block['start_time']).strftime("%a, %B %e, %Y") %></td>
          <td><%= DateTime.parse(@schedule_block['start_time']).strftime("%l:%M")%>-<%= DateTime.parse(@schedule_block['end_time']).strftime("%l:%M %p") %></td>
          <td>NUMBER OF APPTS HERE</td>
          <td><%= @schedule_block['reservation_min'] %></td>
          <td><%= @schedule_block['reservation_max'] %></td>
          <td><%= @schedule_block['status'] %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
  <%= button_to 'Cancel Event Instance', update_schedule_block_event_path, params: {schedule_block_id: @schedule_block['id'], status: 'cancelled' }, class: 'btn btn-danger' %>
  </div>
</div>
