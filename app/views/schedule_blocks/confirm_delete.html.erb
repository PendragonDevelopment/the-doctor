<div class="row">
<div class="col-md-10 col-md-offset-1">

<div class="row">
  <h1>Confirm Deletion</h1>
  <h3>Are you sure you want to delete this Event Instance?</h3>
</div>

<div class="row">
  <table class="table table-hover table-bordered table-striped">
    <thead>
      <tr>
        <th>Date</th>
        <th>Start Time</th>
        <th>End Time</th>
        <th>Reservation Min</th>
        <th>Reservation Max</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= DateTime.parse(@schedule_block['start_time']).strftime("%A, %B %-d, %Y") %></td>
        <td><%= DateTime.parse(@schedule_block['start_time']).strftime("%l:%M %P") %></td>
        <td><%= DateTime.parse(@schedule_block['end_time']).strftime("%l:%M %P") %></td>
        <td><%= @schedule_block['reservation_min'] %></td>
        <td><%= @schedule_block['reservation_max'] %></td>
        <td><%= @schedule_block['status'] %></td>
      </tr>
    </tbody>
  </table>
</end>

<div class="row">
  <%= link_to 'Delete Event Instance', event_schedule_block_path(event_id: @event_id, id: @schedule_block['id']), method: :delete, class: 'btn btn-danger' %>
  <%= link_to 'Return to All Event Instances', event_schedule_blocks_path(event_id: @event_id), class: 'btn btn-default' %>
</div>

</div>
</div>