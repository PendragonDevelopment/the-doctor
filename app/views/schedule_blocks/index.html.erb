<h1>Event Instances</h1>
<h3>(Schedule Blocks)</h3>

<div class="row">
  <table class="table table-hover table-bordered table-striped">
    <thead>
      <tr>
        <th>Date</th>
        <th>Start Time</th>
        <th>End Time</th>
        <th>Reservation Min</th>
        <th>Reservation Max</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
    <% @event_schedule_blocks.each do |sb| %>
      <tr>
        <td><%= DateTime.parse(sb['start_time']).strftime("%A, %B %-d, %Y") %></td>
        <td><%= DateTime.parse(sb['start_time']).strftime("%l:%M %P") %></td>
        <td><%= DateTime.parse(sb['end_time']).strftime("%l:%M %P") %></td>
        <td><%= sb['reservation_min'] %></td>
        <td><%= sb['reservation_max'] %></td>
        <td><%= sb['status'] %></td>
        <td><%= link_to 'Edit', edit_event_schedule_block_path(event_id: sb['event_id'], id: sb['id']) %></td>
        <td><%= link_to 'Delete', confirm_delete_event_schedule_block_path(event_id: sb['event_id'], id: sb['id']) %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</end>

           
   